<div class="form-group row">
    <label class="col-form-label col-sm-2" for="name">name</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" name="name" value="<%= model.name %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="price">price</label>
    <div class="col-sm-7">
      <input class="form-control" type="number" name="price" value="<%= model.price %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="description">description</label>
    <div class="col-sm-10">
      <textarea class="form-control" cols="20" name="description" maxlength="32000" rows="7"><%= model.description %></textarea>
    </div>
  </div>
  